MoondreamCLI {
    background: $surface;
    color: $text;
}

/* Sidebar styling */
#sidebar {
    width: 20;
    height: 100%;
    background: $panel;
    padding: 1 0;
}

#infer_button {
    width:100%;
}

#logs_button {
    width:100%;
}

#setting_button {
    width:100%;
}

#main_panel {
    height: 100%;
}

#infer_layout {
    height: 100%;
}

#response_container {
    height: 1fr;
    overflow-y: auto;
}

#input_container {
    dock: bottom;
}

.response-card {
    border: round $secondary;
    padding: 1;
    margin-bottom: 1;
}

#input_container Input {
    width: 1fr;
}

#submit_button {
    width: 12;
}

